<Window x:Class="ImageArranger.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageArranger"
        mc:Ignorable="d"
        Title="StatisticsWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="16" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="16" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="16" />
        </Grid.RowDefinitions>
        
        <!-- Heading area -->
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Text="Statistics" />

        <!-- Sorting and filters -->
        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Orientation="Horizontal">
            
            <Button
                Margin="0, 0, 8, 0"
                Content="Frequent" />
            <Button
                Margin="0, 0, 8, 0"
                Content="Recent" />
            <Button
                Margin="0, 0, 8, 0"
                Content="Start date" />
            <Button
                Margin="0, 0, 8, 0"
                Content="End date" />
            
        </StackPanel>

        <!-- Folders area -->
        <DockPanel
            Grid.Row="3"
            Grid.Column="1">

            <ListBox x:Name="foldersListBox">
                <!-- folder item -->
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="8" />
                            </Grid.RowDefinitions>

                            <!-- num views -->
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Grid.RowSpan="2"
                                Text="NumViews" />
                            <!-- folder icon -->
                            <Image
                                Grid.Row="1"
                                Grid.Column="2"
                                Grid.RowSpan="2"/>
                            <!-- folder name -->
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="3" />
                            <!-- absolute path -->
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="3" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </DockPanel>

        <!-- Files area -->
        <DockPanel
            Grid.Row="3"
            Grid.Column="2">

            <ListView x:Name="filesListView">
                <ListView.View>
                    <GridView>

                        <GridViewColumn Header="Views"
                            Width="50"
                            DisplayMemberBinding="{Binding NumViews}" />

                        <GridViewColumn Header="Name"
                            Width="100"
                            DisplayMemberBinding="{Binding Name}" />

                        <GridViewColumn Header="Last Opened"
                            Width="100"
                            DisplayMemberBinding="{Binding TimestampLastOpened}" />

                        <GridViewColumn Header="Directory"
                            Width="100"
                            DisplayMemberBinding="{Binding ParentDirName}" />

                    </GridView>
                </ListView.View>
            </ListView>

        </DockPanel>

        <!-- Preview area -->
        <Image
            Margin="16" />

        <!-- Bottom area -->
        <Button
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            MaxWidth="100"
            HorizontalAlignment="Left"
            Content="Clear all data" />

    </Grid>
</Window>
